{
    "name": "simple-typescript-tcp-jsonrpc",
    "version": "1.0.0",
    "description": "Simple TCP server with JSON-RPC and TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Nauja/simple-typescript-tcp-jsonrpc"
    },
    "author": "Jérémy Morosi",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js",
        "serve": "node dist/app.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose"
    },
    "dependencies": {
        "jsonrpc-node": "^1.2.93"
    },
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.36",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.3"
    }
}
