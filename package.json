{
    "name": "simple-typescript-tcp-jsonrpc",
    "version": "1.0.0",
    "description": "Simple TCP server with JSON-RPC and TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Nauja/simple-typescript-tcp-jsonrpc"
    },
    "author": "Jérémy Morosi",
    "license": "MIT",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build": "tsc",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js",
        "serve": "node dist/app.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose"
    },
    "dependencies": {
        "jsonrpc-node": "^1.2.93"
    },
    "devDependencies": {
        "@types/node": "^14.14.36",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3"
    }
}
